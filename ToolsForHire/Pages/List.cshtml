@page
@model ToolsForHire.Pages.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>List of products</h1>

<form asp-page="./List" method="get">
    <div class="form-actions no-color">
        <p>
            Enter a product code or product name to search:
            <input type="text" name="SearchString" value="@Model.SearchString" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <tr>
        <th>Product Code</th>
        <th>Product Name</th>
        <th>Daily Hire Cost</th>
    </tr>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.ProductCode</td>
            <td>@product.ProductName</td>
            <td>@product.DailyHireCost</td>
        </tr>
    }
</table>